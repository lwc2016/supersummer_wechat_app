/*--------头部样式---------*/
.header{
	padding: 40rpx 30rpx;
}
.header .has_logined{
	width: 100%;
	height: 120rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
}
.header .logo{
	width: 120rpx;
	height: 120rpx;
	margin-right: 40rpx;
}
.header .user_info{
	height: 80rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.header .phone{
	display: flex;
	align-items: center;
}
.header .phone_icon{
	width: 26rpx;
	height: 26rpx;
}
.header .not_logined{
	width: 100%;
	height: 120rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.header .arrow_icon{
	width: 22rpx;
	height: 42rpx;
}
.header .login-text{
	margin-bottom: 12rpx;
}

.navbar{
	width: 100%;
	height: 160rpx;
	background-color: #ffffff;
	display: flex;
	border-bottom: 1rpx solid #EBEEF5;
}
.navbar .nav-item{
	width: 25%;
	height: 160rpx;
	border-right:1rpx solid #EBEEF5;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.navbar .nav-item:last-child{
	border-right: none;
}
.navbar .nav-title{
	margin-top: 16rpx;
}