page{
	background-color: #f5f5f5;
}
/*--------------头部样式------------*/
.header{
	padding: 40rpx 30rpx;
}
.header .has_logined{
	width: 100%;
	height: 120rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
}
.header .logo{
	width: 120rpx;
	height: 120rpx;
	margin-right: 40rpx;
	border-radius: 100%;
}
.header .user_info{
	height: 80rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.header .phone{
	display: flex;
	align-items: center;
}
.header .phone_icon{
	width: 26rpx;
	height: 26rpx;
}
.header .not_logined{
	width: 100%;
	height: 120rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.header .arrow_icon{
	width: 22rpx;
	height: 42rpx;
}
.header .login-text{
	margin-bottom: 12rpx;
}
/*-------------导航区域样式----------*/
.navbar{
	width: 100%;
	height: 160rpx;
	background-color: #ffffff;
	display: flex;
	border-bottom: 1rpx solid #EBEEF5;
}
.navbar .nav-item{
	width: 25%;
	height: 160rpx;
	border-right:1rpx solid #EBEEF5;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.navbar .nav-item:last-child{
	border-right: none;
}
.navbar .nav-title{
	margin-top: 16rpx;
}



.section{
	border-top: 1rpx solid #EBEEF5;
	border-bottom: 1rpx solid #EBEEF5;
	margin-top: 30rpx;
	background-color: #ffffff;
	padding-left: 30rpx;
}
.section .section_item{
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 90rpx;
	padding-right: 30rpx;
}
.section .section_item + .section_item{
	border-top: 1rpx solid #EBEEF5;
}
.section .item_icon{
	width: 30rpx;
	height: 30rpx;
	margin-right: 10rpx;
}
.section .arrow_icon{
	width: 18rpx;
	height: 31rpx;
	margin-left: 10rpx;
}
.section .item_left{
	display: flex;
	align-items: center;
}
.section .item_right{
	display: flex;
	align-items: center;
}

