page{
	background-color: #f5f5f5;
}
/*----------头部样式---------*/
.header{
	padding-left: 30rpx;
	padding-right: 30rpx;
	height: 70rpx;
	background-color: #ffffff;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-bottom: 2rpx solid #EBEEF5;
}

/*--------题目标题样式--------*/
.title{
	padding-top: 20rpx;
	padding-bottom: 20rpx;
	padding-left: 30rpx;
	padding-right: 30rpx;
	background-color: #ffffff;
	line-height: 36rpx;
}
.title .question_type{
	margin-right: 5rpx;
}

/*-----题目选项样式-------*/
.options{
	margin-top: 20rpx;
	background-color: #ffffff;
	padding-left: 30rpx;
	padding-right: 30rpx;
}
.options .option{
	display: flex;
	justify-content: flex-start;
	padding-top: 15rpx;
	padding-bottom: 15rpx;
}
.options .label{
	width: 54rpx;
	height: 54rpx;
	border: 2rpx solid #409EFF;
	color: #409EFF;
	text-align: center;
	line-height: 54rpx;
	margin-right: 15rpx;
}
.options .label-single{
	border-radius: 100%;
}
.options .label-double{
	border-radius: 8rpx;
}
.options .label-active{
	background-color: #409EFF;
	color: #ffffff;
}
.options .option-content{
	width: calc(100% - 60rpx);
	line-height: 36rpx;
	margin-top: 12rpx;
}

/*--------提交答案样式-------*/
.btn-group{
	padding-top: 45rpx;
	padding-bottom: 45rpx;
	background-color: #ffffff;
}
.btn-group .btn{
	margin-left: 30rpx;
	margin-right: 30rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 6rpx;
}

/*---------答案解析样式---------*/
.resolve{
	margin-top: 20rpx;
}
.resolve .resolve-title{
	padding: 20rpx 30rpx;
	background-color: #ffffff;
	border-bottom: 2rpx solid #EBEEF5;
}
.resolve .resolve-title .title-item + .title-item{
	margin-top: 20rpx;
}
.resolve .resolve-content{
	padding: 20rpx 30rpx;
	background-color: #ffffff;
	line-height: 36rpx;
}

.hidden{
	width: 100%;
	height: 120rpx;
}

/*----------底部样式------*/
.footer{
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background-color: #ffffff;
	display: flex;
}
.footer .footer-left{
	width: 50%;
	height: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.footer .fankui-icon{
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}
.footer .footer-right{
	width: 50%;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
}

.modal{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 2;
	display: flex;
	justify-content: center;
	align-items: center;
}
.modal .modal-content{
	padding-top: 20rpx;
	width: 600rpx;
	margin-left: 60rpx;
	margin-right: 60rpx;
	background-color: #ffffff;
	border-radius: 8rpx;
}
.modal .modal-title{
	text-align: center;
	height: 60rpx;
	line-height: 60rpx;
}
.modal .modal-body{
	display: flex;
	justify-content: center;
	padding-top: 20rpx;
	padding-bottom: 20rpx;
}
.modal .section-item{
	width: 160rpx;
	height: 80rpx;
	border: 2rpx solid #EBEEF5;
	line-height: 80rpx;
	text-align: center;
	border-radius: 6rpx;
}
.modal .section-item-active{
	border: 2rpx solid #409EFF;
	color: #409EFF;
}
.modal .section-item + .section-item{
	margin-left: 20rpx;
}
.modal .modal-footer{
	padding: 20rpx 30rpx;
	display: flex;
	justify-content: flex-end;
}
.modal .footer_btn{
	width: 140rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	border-radius: 6rpx;
	margin-right: 8rpx;
}














