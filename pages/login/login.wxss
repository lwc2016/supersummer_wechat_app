page{
	background-color: #f5f5f5;
}
.form{
	margin-top: 30rpx;
	background-color: #ffffff;
	padding-left: 30rpx;
	border-top: 1rpx solid #EBEEF5;
	border-bottom: 1rpx solid #EBEEF5;
}
.form .form-group{
	height: 90rpx;
	padding-right: 30rpx;
	display: flex;
	align-items: center;
	position: relative;
}
.form .form-group + .form-group{
	border-top: 1rpx solid #EBEEF5;
}
.form .item-icon{
	width: 30rpx;
	height: 30rpx;
	position: absolute;
	left: 0;
}
.form .status-icon{
	width: 30rpx;
	height: 30rpx;
	position: absolute;
	right: 30rpx;
}
.form input{
	padding-left: 40rpx;
	width: calc(100% - 80rpx);
}

.btn{
	margin-top: 100rpx;
	margin-left: 30rpx;
	margin-right: 30rpx;
	background-color: #4cd964;
	height: 90rpx;
	line-height: 90rpx;
	text-align: center;
	border-radius: 8rpx;
}
.footer{
	margin-top: 30rpx;
	padding-left: 30rpx;
	padding-right: 30rpx;
}
.footer .click-btn{
	display: inline-block;
	width: 140rpx;
	height: 60rpx;
	vertical-align: middle;
	line-height: 60rpx;
	text-align: center;
}